<?xml version="1.0" encoding="UTF-8"?>
<manifest>
	<remote
		name="yocto"
		fetch="git://git.yoctoproject.org"
	/>
	<remote
		name="oe"
		fetch="git://git.openembedded.org"
	/>
	<remote
		name="github"
		fetch="git://github.com"
	/>


	<default
		revision="master"
		sync-j="4"
	/>


	<project
		remote="yocto"
		revision="thud"
		name="poky"
		path="poky"
	/>
	<project
		remote="yocto"
		revision="thud"
		name="meta-raspberrypi"
		path="meta-raspberrypi"
	/>
	<project
		remote="oe"
		revision="thud"
		name="meta-openembedded"
		path="meta-openembedded"
	/>
	<project
		remote="github"
		revision="master"
		name="zhu-yi/meta-lms"
		path="meta-lms"
	/>
	<project
		remote="github"
		revision="master"
		name="zhu-yi/meta-rpi-home"
		path="meta-rpi-home"
	>
		<copyfile
			src="conf/bblayers.conf.sample"
			dest="poky/build/conf/bblayers.conf"
		/>
		<copyfile
			src="conf/local.conf.sample"
			dest="poky/build/conf/local.conf"
		/>
	</project>
</manifest>
